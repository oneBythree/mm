//侧边栏
$side-bg:#353537;
$side-color:#95a0aa;
$side-border:#3b3b43;
@import 'variable';
.sideBar {
    width: 310px;
    background: #32323a;
    min-height: 100%;
}

.sidemenu { 
    a.item {
        display: block;
        color: $side-color;
        background: $side-bg;
        @include funcHeight($num50);
        @include border-bottom($side-border);
        font-size: $num18;
        padding-right: $num20;
        overflow: hidden;
        i.icon-submenu {
            margin-left: $num20;
            font-size: $num18;
        }
        &.active {
            background: $link-color;
            color: $color-white;
        }
        &:first-of-type {
            @include border-top($side-border);
        }
        i.icon-submenu {
            margin-left: $num20;
            font-size: $num18;
        }
        &.list1 {
            padding-left: $num35;
        }
        &.list2 {
            padding-left: $num50;
        }
        &.list3 {
            padding-left: 84px;
        }
        &.list2,
        &.list3 {
            font-size: $num16;
            i.iconfont {
                font-size: $num16;
            }
            i.iconfont:not(.icon-right-arrow) {
                margin-right: 8px;
            }
        }
    }
}

.sub1,
.sub2 {
    display: none;
    /*height: 0px;
    overflow: hidden;*/
}

//响应式1440以下的屏幕
@media screen and (max-width: 1440px) {
    .sideBar {
        width: 310px*.8;
    }
    .sidemenu {
        a.item {
            @include funcHeight($num50*.8);
            font-size: $num16;
            padding-right: $num20*.8;
            i.icon-submenu {
                margin-left: $num20*.8;
                font-size: $num16;
            }
            &.list1 {
                padding-left: $num35*.8;
            }
            &.list2 {
                padding-left: $num50*.8;
            }
            &.list3 {
                padding-left: 84px*.8;
            }
            &.list2,
            &.list3 {
                font-size: $num14;
                i.iconfont {
                    font-size: $num14;
                }
                i.iconfont:not(.icon-right-arrow) {
                    margin-right: 5px;
                }
            }
        }
    }
}
