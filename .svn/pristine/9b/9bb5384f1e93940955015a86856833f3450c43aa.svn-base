<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="styles/base.css">
    <link rel="stylesheet" type="text/css" href="font/iconfont.css">
    <link rel="stylesheet" type="text/css" href="bootstrap/css/sweetalert.min.css">
    <link rel="stylesheet" type="text/css" href="styles/base/daterangepicker-bs3.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css">
    <script type="text/javascript" src="scripts/jslib/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="scripts/jslib/vue.min.js"></script>
    <script type="text/javascript" src="bootstrap/js/sweetalert-dev.js"></script>
    <script type="text/javascript" src="scripts/jsplug/moment.min.js"></script>
    <script type="text/javascript" src="scripts/jsplug/daterangepicker.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script type="text/javascript" src="scripts/jsplug/main.js"></script>
</head>

<body>
    <div>
        <div class="m-crumbs">您当前的位置：
            <ol class="breadcrumb">
                <li><a href="#/goods">物品管理</a></li>
            </ol>
        </div>
        <form class="form-inline m-line-form" name="loginForm" verify-scope>
            <div class="form-group">
                <label>起止日期</label>
                <div class="m-icon-date">
                    <span for="date1"><i class="iconfont icon-riqi"></i></span>
                    <input id="date1" bs-Datepicker type="text" class="w180 date-time-defalut" placeholder="请选择时间段" readonly>
                </div>
            </div>
            <div class="form-group">
                <label for="inputId">物品ID</label>
                <input type="text" class="form-control m-input w100" id="inputId" ng-model="goodsId">
            </div>
            <div class="form-group">
                <label for="inputId">企业名称</label>
                <select name="" id="" class="form-control">
                    <option>111</option>
                    <option>222</option>
                    <option>333</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputId">物品标签</label>
                <select class="selectpicker" data-live-search="true" data-width="100px">
                	<option>请选择</option>
                    <option>水果1</option>
                    <option>香蕉1</option>
                    <option>苹果1</option>
                    <option>水果2</option>
                    <option>香蕉2</option>
                    <option>苹果2</option>
                    <option>水果3</option>
                    <option>香蕉3</option>
                    <option>苹果3</option>
                    <option>水果4</option>
                    <option>香蕉4</option>
                    <option>苹果4</option>
                    <option>水果5</option>
                    <option>香蕉5</option>
                    <option>苹果5</option>
                </select>
            </div>
            <button type="submit" class="btn m-btn-icon" ng-click="search()"><i class="iconfont icon-search"></i> </button>
            <button type="submit" class="btn m-btn-icon" ng-click="reset()"><i class="iconfont icon-cancel"></i> </button>
        </form>
        <div class="m-btn-group">
            <a href="javascript:;" class="btn  m-btn iframeLink" data-url="good-add.html">添加</a>
            <a href="#/goods/batchadd" class="btn m-btn">批量添加</a>
            <a href="#/goods/add" class="btn  m-btn">批量添加</a>
            <a href="javascript:;" class="btn  m-btn" data-toggle="modal" data-target="#myModal">批量标签</a>
            <a href="#/goods/add" class="btn  m-btn">批量下载二维码</a>
        </div>
        <table class="table table-bordered m-table" id="goodsTable">
            <thead>
                <tr>
                    <th>
                        <div class="mid-box">
                            <input type="checkbox" v-model="selectAll" name="sort">
                            <label>序号</label>
                        </div>
                    </th>
                    <th>企业名称</th>
                    <th>企业编码</th>
                    <th>物品ID</th>
                    <th>物品名称</th>
                    <th>物品标签</th>
                    <th>备注</th>
                    <th>日期</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in goodsData">
                    <td>
                        <div class="mid-box">
                            <input type="checkbox" v-model="" value="{{item._id}}" name="sort">
                            <label>{{$index+1}}</label>
                        </div>
                        <td>{{item.company.node_name}}</td>
                        <td>{{item.company.node_id}}</td>
                        <td>{{item._id}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.tags.node_name}}</td>
                        <td class="col-xs-2">{{item.note}}</td>
                        <td>{{item.date}}</td>
                        <td>
                            <div class="col-xs-3">
                                <a href="javascript:;" class="m-link" v-on:click="lookOver(item)">
                                    <i class="iconfont icon-look"></i>
                                </a>
                            </div>
                            <div class="col-xs-3">
                                <a href="javascript:;" class="m-link">
                                    <i class="iconfont icon-download"></i>
                                </a>
                            </div>
                            <div class="col-xs-3">
                                <a href="javascript:;" class="m-link" v-on:click="linkUrl(item._id)">
                                    <i class="iconfont icon-edit"></i>
                                </a>
                            </div>
                            <div class="col-xs-3">
                                <a href="javascript:;" class="m-link" v-on:click="del(item)">
                                    <i class="iconfont icon-del"></i>
                                </a>
                            </div>
                        </td>
            </tbody>
        </table>
        <nav class="m-page">
            <ul class="pagination fr ">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li><a href="javascript:;" onclick="PageSize(1)">1</a></li>
                <li><a href="javascript:;" onclick="PageSize(2)">2</a></li>
                <li><a href="javascript:;" onclick="PageSize(3)">3</a></li>
                <li><a href="javascript:;" onclick="PageSize(4)">4</a></li>
                <li><a href="javascript:;" onclick="PageSize(5)">5</a></li>
                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <script type="text/javascript">
    var vm = new Vue({
        el: "body",
        data: function() {
            return {}
        },
        ready: function() {
            this.init();
        },
        methods: {
            init: function() {
                var slef = this;
                $.ajax({
                        url: 'api/basicGoods.json',
                        type: 'GET',
                        async: false, //同步进行（否则ifram标签不能自适应）
                        success: function(data) {
                            slef.$set('goodsData', data);
                        }
                    })
                    // $('.selectpicker').selectpicker();
            },
            lookOver: function(goods) {
                var name = goods.name;
                var params = [{
                    "fieldText": "企业名称",
                    "fieldData": goods.company.node_name,
                }, {
                    "fieldText": "企业编码",
                    "fieldData": goods.company.node_id
                }, {
                    "fieldText": "物品名称",
                    "fieldData": goods.name
                }, {
                    "fieldText": "物品标签",
                    "fieldData": goods.tags.node_name
                }, {
                    "fieldText": "备注",
                    "fieldData": goods.note
                }];

                var tableStr = toStrTable(params)
                swal({
                    title: "物品 " + name + " 信息",
                    // text: "You will not be able to recover this imaginary file!",
                    type: "table",
                    size: 'lg',
                    table: tableStr,
                    showConfirmButton: false,
                    html: true
                }, function() {
                    swal("已删除!", "Your imaginary file has been deleted.", "success");
                })
            },
            linkUrl: function(id) {
                window.location.href = 'good-add.html?id=' + id;
            },
            del: function(goods) {
                var slef = this;
                var name = goods.name;
                swal({
                    title: "您是否确认删除物品 " + name + " ？",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#DD6B55',
                    confirmButtonText: "确认删除",
                    cancelButtonText: "取消删除",
                    closeOnConfirm: false,
                }, function() {
                    slef.goodsData.$remove(goods);
                    swal("删除成功", "物品已 " + name + " 删除.", "success");
                });
            }
        }
    })

    function toStrTable(objArrays) {
        var forRows = '';
        $.each(objArrays, function(index, val) {
            forRows += '<div class="form-group"><label  class="col-sm-2 control-label">' + val.fieldText + '</label><div class="col-sm-10">' + val.fieldData + '</div></div>';
        });
        var str = '<form class="form-horizontal look" role="form">' + forRows + '</form>';
        return str;
    }

    function PageSize(pagesize) {
        // alert(pagesize);
        console.log($(event.target).parent().siblings().removeClass('active'))
        $(event.target).parent().addClass('active');

    }

    $(document).ready(function($) {
        $('#date1').daterangepicker();
        $('.selectpicker').select2();
    });
    </script>
</body>

</html>
