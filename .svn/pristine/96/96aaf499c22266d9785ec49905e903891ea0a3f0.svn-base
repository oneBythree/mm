/**
 * 自定义ui样式
 * ypf
 * 2016.7.29
 */

@import 'variable';
//面包屑
.m-crumbs {
    color: $main-color;
    text-indent: 2px;
    padding: 20px 0;
    margin-top: 10px;
    font-size: 16px;
    border-bottom: 1px solid $border-color;
    .breadcrumb {
        display: inline-block;
        margin-bottom: 0;
        padding: 0;
        background: #f1f1f1;
        li+li:before {
            content: '>'!important;
            color: $link-color;
        }
        a {
            color: $link-color;
        }
    }
}

//链接
.m-link {
    color: $link-color;
    &:hover {
        color: $link-color;
    }
    &.edit {
        display: block;
        width: 60px;
        margin: 10px 0;
        height: 28px;
        line-height: 28px;
    }
}

//提交一列的表单
form.m-line-form {
    padding: $num30 0;
}

// 添加标签
div.add-select-tag {
    position: relative;
    width: 100%;
    border: 1px solid $border-color;
    background: #fff;
    border-radius: 4px;
    padding: 0 12px;
    @include funcHeight(34px);
    p {
        width: 100%;
        height: 100%;
        border: none;
    }
    &:after {
        position: absolute;
        right: 8px;
        top: 50%;
        line-height: normal;
        content: "▼";
        color: #999;
        font-size: 10px;
        margin-top: -8px;
    }
    ol {
        position: absolute;
        z-index: 10;
        left: 0;
        top: 26px;
        background: #fff;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 4px;
        li {
            position: relative;
            padding: 0 8px;
        }
        li.add-tag {
            display: table;
            width: 100%;
            border-bottom: 1px solid $border-color;
            span,
            a {
                display: table-cell;
                width: 70px;
            }
            div {
                position: relative;
                top: 5px;
                height: 20px!important;
                line-height: 20px!important;
                vertical-align: middle;
                background: #f2f2f2;
            }
            a.m-link {
                text-align: right;
            }
        }
        ul {
            max-height: 112px;
            overflow-y: scroll;
            li a {
                display: block;
                text-indent: 4px;
            }
        }
        a.item:hover {
            background: #1fb5ad;
            color: $color-white;
        }
    }
}

div.edit-warpper {
    input[type="text"] {
        width: 200px;
        padding: 0 12px;
        border-radius: 4px;
        border: 1px solid #ccc;
        &:focus {
            @extend .box-shadow;
        }
    }
    a.btn-edit {
        display: inline-block;
        width: 38px;
        color: $link-color;
        text-align: center;
        margin-left: 10px;
    }
}

//搜索样式
li.add-search,
div.add-search {
    position: relative;
    border-bottom: 1px solid $border-color;
    overflow: hidden;
    input[type="text"].add-search-input {
        width: 100%;
        border: none;
    }
    a.search-btn {
        position: absolute;
        right: 0;
        top: 0;
        width: 34px;
        height: 100%;
        line-height: 28px;
        color: $border-color;
        text-align: center;
        i.iconfont {
            font-size: 12px;
            vertical-align: middle;
        }
    }
    li.item {
        display: block;
        &:hover {
            @extend .hover-style;
        }
    }
}

div.add-search {
    border: 1px solid $border-color;
    border-radius: 4px;
    margin-top: 10px;
    div.warpper-search {
        padding: 0 12px;
    }
    ul {
        border-top: 1px solid $border-color;
        max-height: 112px;
        overflow-y: scroll;
        &:empty {
            border-top: none;
        }
        li {
            padding: 0 8px;
            a {
                display: block;
                @include funcHeight(28px);
                text-indent: 4px;
            }
        }
    }
}

.inblock {
    display: inline-block;
    vertical-align: middle;
    &.small {
        width: 100px;
    }
    &.defalut {
        width: 160px;
    }
    &.max {
        width: 200px;
    }
}

//带搜索下拉列表
div.m-select-search {
    position: relative;
    font-size: 14px;
    border: 1px solid #ccc;
    box-sizing: border-box;
    border-radius: 4px;
    background: #fff;
    p.select-text:after {
        position: absolute;
        right: 8px;
        top: 8px;
        line-height: normal;
        content: "▼";
        color: #999;
        font-size: 10px;
    }
    &.active {
        border: none;
        p.select-text:after {
            content: '▲';
        }
    }
    p.select-text,
    ul.select-droplist li {
        @include funcHeight(34px);
    }
    p.select-text {
        position: relative;
        padding: 0 12px;
        @extend .overflow;
        @include funcHeight(34px);
    }
    ul.select-droplist {
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        border: 1px solid #5897fb;
        background: #fff;
        border-radius: 4px;
        overflow: hidden;
        z-index: 100;
        li.item {
            padding-left: 4px;
            text-indent: 6px;
            cursor: pointer;
            @extend .overflow;
            a {
                display: block;
                &:hover {
                    @extend .hover-style;
                }
            }
        }
        li.search {
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid #ccc;
            border-top: 1px solid #ccc;
            input[type="text"] {
                text-indent: 12px;
                border: none;
                width: 100%;
            }
            i.iconfont {
                position: absolute;
                right: 0;
                top: 0;
                width: 20px;
                color: #999;
                font-size: 12px;
            }
        }
        li.create {
            padding: 0 12px;
            border-bottom: 1px solid #ccc;
            background: #f9f9f9;
            overflow: hidden;
            input[type="text"] {
                border: none;
                width: 160px;
            }
            a.btn-edit {
                @extend .m-link;
                margin-left: 10px;
            }
        }
        ol {
            max-height: $num34*4;
            overflow-y: scroll;
        }
    }
}

//上传样式
div.m-file {
    position: relative;
    width: 100%;
    @include funcHeight($num34);
    background: $color-white;
    @extend .border-box;
    border-radius: 4px;
    border: 1px solid #ccc;
    overflow: hidden;
    color: $color-white;
    &:after {
        content: '浏览';
        position: absolute;
        right: 0;
        top: 0;
        width: $num62;
        text-align: center;
        @include funcHeight($num34);
        background: $link-color;
    }
    input[type="file"] {
        position: absolute;
        opacity: 0;
        filter: alpha(opacity=0);
        z-index: 2;
        cursor: pointer;
    }
    p {
        position: absolute;
        left: 0;
        height: 0;
        padding: 0 12px;
    }
}

//适配1440px以下的屏幕
@media screen and (max-width: 1440px) {
    .m-crumbs {
        padding: 16px 0;
        margin-top: 8px;
        font-size: 14px;
    }
    form.m-line-form {
        padding: $num30*.8 0;
    }
    div.add-select-tag {
        @include funcHeight(28px);
    }
    div.m-select-search {
        font-size: 12px;
        p.select-text:after {
            top: 6px;
        }
        ul.select-droplist {
            top: 0px;
        }
        p.select-text,
        ul.select-droplist li {
            @include funcHeight(28px);
        }
        ol {
            max-height: $num34*4*.8;
        }
    }
    div.m-file {
        @include funcHeight($num28);
        &:after {
            width: $num62*.8;
            @include funcHeight($num28);
        }
    }
}
